@model IEnumerable<TSOnline.Models.LoadBannerResult>

@foreach (var item in Model)
{
    <div class="single_banner_slider">
        <div class="row">
            <div class="col-lg-5 col-md-8">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h1 style="">
                            @item.TenTS
                        </h1>
                        <h3 style="color: red;">
                            @item.Giaban VNĐ
                        </h3>
                        <h3>@item.TenLoai</h3>
                        <p>@item.NoiDung</p>
                        <a href="@Url.Action("Details","TraSua",new {id=item.MaTS})" class="btn_2">Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="banner_img d-none d-lg-block">
                <img src="~/img/@item.Anhbia" alt="Hình ảnh">
            </div>
        </div>
    </div>
}

